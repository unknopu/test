  "bugs": {
    "url": "https://github.com/StartloJ/ts-example/issues"
  },
  "homepage": "https://github.com/StartloJ/ts-example#readme",
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/express": "^4.17.13",
    "@types/mocha": "^8.2.3",
    "@types/supertest": "^2.0.11",
    "chai": "^4.3.4",
    "mocha": "^9.0.2",
    "mocha-junit-reporter": "^2.0.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
